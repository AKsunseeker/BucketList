<%= render(partial: 'layouts/navbar') %>
<div class="container">
  <div class="center-align">
    <h2><%= @item.name %></h2>
  </div>
  <div clas="row">
    <p>
      Description: 
      <%= @item.description %>
      <br />
      Category:
      <%= @item.category %>
      <br />
      Status:
      <div type="checkbox">
        <%= @item.status%>
      </div>
    </p>
  </div>
      <br />
  <div class="row">
    <div class="col s3">
      <%= link_to 'Edit Item', edit_list_item_path(@list, @item), class: 'btn' %>
    </div>
    <div class="col s3">
      <%= link_to 'New Item', new_list_item_path, class: 'btn' %>
    </div>
    <div class="col s3">
      <%= link_to 'New List', new_list_path(@list), class: 'btn' %>
    </div>
    <div class="col s3">
      <%= link_to 'Delete List', list_item_path(@list, @item), method: :delete, data: {confirm: 'Are you sure you want to give up on this item?'}, class: 'btn' %>
    </div>
  </div>
</div>