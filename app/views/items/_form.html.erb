<% if @item.errors.any? %>
  <h5>Errors:</h5>
  <p><%= @item.errors.full_messages.join(',') %></p>
<% end %>

<%= form_for [@list, @item] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <div class="input-field" >
    <%= f.select :category, options_for_select([['Adventure'],['Travel'],['Family'], ['Education'], ['Service'], ['FUN'], ['Entertainment'], ['Misc']]) %>
    <%= f.label :category %>
  </div>
  <br />
  <%= f.check_box :status %>
  <%= f.label :status %>
  <br />
  <%= f.submit class: 'btn' %>
<% end %>