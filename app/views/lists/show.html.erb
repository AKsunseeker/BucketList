<%= render(partial: 'layouts/navbar') %>
<div class="container">
  <div class="center-align">
    <h2><%= @list.name %></h2>
    <br />
    <h3><%= @list.description %></h3>
    <br />
    <p><%= @list.number_of_likes %></p>

    <% if @items.any? %>
      <ul>
        <% @items.each do |item| %>
          <li>
            <%= link_to item.name, list_item_path(@list, item) %>
            <%= item.status %>
            <%= item.number_of_likes %>
          </li>
        <% end %>
      </ul>
      <% else %>
        <h3>You have no Items to choose from, go ahead and ADD one</h3> 
        <%= link_to 'Add your first item', new_list_item_path(@list) %> 
    <% end %>
    <br />
    <div class="row">
      <div class="col s3">
        <%= link_to 'Add Item', new_list_item_path(@list), class: 'btn' %>
      </div>
      <div class="col s3">
        <%= link_to 'Edit List', edit_list_path(@list), class: 'btn' %>
      </div>
      <div class="col s3">
        <%= link_to 'New List', new_list_path, class: 'btn' %>
      </div>
      <div class="col s3">
        <%= link_to 'Delete List', list_path(@list), method: :delete, data: {confirm: 'Are you sure you want to give up on this list?'}, class: 'btn' %>
      </div>
    </div>
  </div>
</div>