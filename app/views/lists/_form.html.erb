<% if @list.errors.any? %>
  <h5>Errors:</h5>
  <p><%= @list.errors.full_messages.join(',') %></p>
<% end %>

<%= form_for @list do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.submit class: 'btn' %>
<% end %>