<%= render(partial: 'layouts/navbar') %>
<div class="container">
  <div class="center-align">
    <h2>Your BucketLists</h2>
    <% if @lists.any? %>
      <ul>
        <% @lists.each do |list| %>
          <li>
            <%= link_to list.name, list_path(list) %>
            <%= list.description %>
            <%= list.number_of_likes %>
          </li>
        <% end %>
      </ul>
      <% else %>
        <h3>You have no lists to choose from, go ahead and ADD one</h3> 
        <%= link_to 'Create your first BucketList', new_list_path %> 
    <% end %>
  </div>
  <br />
  <div class="row">
    <div class="col s4">
      <%= link_to 'New List', new_list_path, class: 'btn' %>
    </div>
    <div class="col s4">
      <%= link_to 'Edit User Profile', edit_user_registration_path, class: 'btn' %>
    </div>
  </div>
</div>

